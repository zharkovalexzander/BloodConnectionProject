<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sphinx.ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">#FFA500</item>
    </style>

    <style name="DialogWindowTitle.Sphinx" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Sphinx.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Sphinx.Button.Borderless.Small" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogButton</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogButton" parent="@android:style/TextAppearance.Holo.Medium"></style>

    <style name="Sphinx.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="AlertDialog_Sphinx">
        <item name="android:fullDark">@android:color/black</item>
        <item name="android:topDark">@android:color/holo_red_dark</item>
        <item name="android:centerDark">@android:color/black</item>
        <item name="android:bottomDark">@android:color/black</item>
        <item name="android:fullBright">@android:color/black</item>
        <item name="android:topBright">@android:color/black</item>
        <item name="android:centerBright">@android:color/black</item>
        <item name="android:bottomBright">@android:color/black</item>
        <item name="android:bottomMedium">@android:color/black</item>
        <item name="android:centerMedium">@android:color/black</item>
    </style>

</resources>